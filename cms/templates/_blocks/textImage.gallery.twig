{% extends '_blocks/_layout.twig' %}

{% block body %}
    <div class="block-content container">
        {% include '_blocks/_partials/headline.twig' with {
            class: 'mb-24'
        } %}

        <div class="flex w-full">
            <div class="text w-1/3">
                {% include '_blocks/_partials/prose.twig' %}
            </div>

            <div class="images w-2/3 pl-16">
                {% set cols = block.images|length >= 4 ? 4 : block.images|length %}
                <div class="grid gap-8 grid-cols-{{cols}}">
                    {% for image in block.images.all() %}
                        <div class="bg-white">
                            {% include '_blocks/_partials/image.twig' with {
                                image: image
                            } %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}{% endblock %}