{% extends "_layouts/generic-page-layout.twig" %}

{% block content %}
    <div class="{{entry.section.handle}} {{entry.section.handle}}--{{entry.type.handle}}">
        <div class="header" role="heading" aria-level="1">
            {% if entry.heroBlock.one() %}
                {% include '_blocks/_loop.twig' with {
                    'position': 'hero',
                    'blocks'  : entry.heroBlock,
                    'entry'   : entry,
                } %}
            {% else %}
                <div class="container pt-12">
                    {% include '_blocks/_partials/headline-h1.twig' with { headline: entry.title } %}
                </div>
            {% endif %}
        </div>

        <div class="body">
            <div class="container">
                <div class="flex flex-col lg:flex-row">
                    <div class="grow content">
                        {% include '_blocks/_loop.twig' with {
                            'position': 'content',
                            'blocks'  : entry.contentBlocks,
                            'entry'   : entry,
                        } %}
                    </div>

                    <div class="flex flex-col pt-8 mt-8 border-t
                        lg:pt-0 lg:mt-0 lg:pl-8 lg:ml-8 lg:border-l lg:border-t-0 sidebar">
                        <div class="flex flex-col justify-between mt-8 lg:w-96 lg:max-w-xs">
                            <aside>
                                {% include '_blocks/_loop.twig' with {
                                    'position': 'sidebar',
                                    'blocks'  : entry.sidebarBlocks,
                                    'entry'   : entry,
                                } %}
                            </aside>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
{% endblock %}

{% block subcontent %}
    {% include '_partials/above-footer.twig' %}
{% endblock %}

{% block contentJS %}
    {% include '_blocks/_loop.twig' with { 'blocks': entry.contentBlocks, js: true } %}
{% endblock contentJS %}