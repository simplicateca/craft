{% set mobilePages = [] %}
{% set nodes = craft.navigation.nodes('primary').all() %}
{% for item in nodes %}
    {% set mobilePages = mobilePages|merge([{
        id: item.id,
        url: item.url,
        title: item.title,
        level: 1,
    }]) %}
{% endfor %}

<mobile-menu @toggle-menu="handleMenuToggle" :pages="{{mobilePages|json_encode}}" :open="mobileOpen"></mobile-menu>