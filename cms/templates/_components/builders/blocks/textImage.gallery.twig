{% extends '_components/builders/_block.twig' %}

{% block blockContent %}
    <div class="block-content container">

        <div class="flex w-full">
            <div class="text w-1/3">
                {{ include( '_components/text/eyebrow.twig' ) }}
                {{ include( '_components/text/prose.twig' ) }}
            </div>

            <div class="images w-2/3 pl-16">
                {% set cols = block.images|length >= 4 ? 4 : block.images|length %}
                <div class="grid gap-8 grid-cols-{{cols}}">
                    {% for image in block.images.all() %}
                        <div class="bg-white">
                            {{ include('_components/media/image', {
                                image: image
                            }) }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}