{% extends '_components/builders/_block.twig' %}

{% set leftWidth  = 'w-1/2' %}
{% set rightWidth = 'w-1/2' %}
{% if block.layout == 'heavyLeft' %}
    {% set leftWidth  = 'w-2/3' %}
    {% set rightWidth = 'w-1/3' %}
{% endif %}
{% if block.layout == 'heavyRight' %}
    {% set leftWidth  = 'w-1/3' %}
    {% set rightWidth = 'w-2/3' %}
{% endif %}

{% block blockContent %}
    <div class="block-content container">
        {{ include( '_components/text/eyebrow.twig' ) }}

        <div class="flex">
            <div class="text left {{leftWidth}} pr-8 flex">
                {{ include('_components/text/prose', {
                    class: 'lg:prose-2xl w-full'
                }) }}
            </div>

            <div class="text right {{rightWidth}} pl-8 flex">
                {{ include('_components/text/prose', {
                    text:  block.text2 ?? '',
                    class: 'lg:prose-2xl w-full'
                }) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block tailwind %}
    {#-- these don't show up anywhere, but the tailwind JIT compiler finds them -- #}
    <div class="w-1/2"></div>
    <div class="w-1/3"></div>
    <div class="w-2/3"></div>
{% endblock %}
