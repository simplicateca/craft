  "plugins": ["fullscreen", "video", "email", "alignment", "linkclass", "imageclass", "listclass"],
  "linkNewTab": true,
  "toolbarFixed": true,
  "imagePosition": false,
  "formatting": ["p", "lead", "h2", "h3", "h4"],
  "formattingAdd": {
    "lede": {
      "title": "Lead / Intro Paragraph",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "lead"
      }
    }
  },
  "linkClasses" : [
    { "label": "Button", "class": "button" }
  ],
  "imageClasses" : [
    { "label": "Normal", "class": "image", "default": true }
  ],
  "listClasses" : [
    { "label": "Two Column", "class": "two-column" }
  ]
}
