{
  "buttons": ["html", "formatting", "bold", "italic", "unorderedlist", "orderedlist", "alignment", "link", "image", "line"],
  "plugins": [ "email", "alignment", "imageclass", "listclass", "linkclass", "inlinestyle"],
  "linkNewTab": true,
  "toolbarFixed": true,
  "imagePosition": false,
  "formatting": ["p", "blockquote", "lead", "smaller", "h2", "h3", "h4"],
  "formattingAdd": {
    "lead": {
      "title": "Larger Paragraph",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "lead"
      }
    },
    "smaller": {
      "title": "Smaller",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "small"
      }
    }
  },
  "linkClasses" : [
    { "label": "Button", "class": "button" }
  ],
  "listClasses" : [
    { "label": "Checkmarks", "class": "checkmarks" },
    { "label": "2 columns",  "class": "grid" }
  ],
  "imageClasses" : [
    { "label": "Center", "class": "prose-img-center", "default": true }
  ]
}