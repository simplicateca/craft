{
  "buttons": ["html", "formatting", "bold", "italic", "unorderedlist", "orderedlist", "alignment", "link", "image", "video", "file", "line"],
  "plugins": ["fullscreen", "video", "email", "alignment", "imageclass", "listclass", "linkclass"],
  "linkNewTab": true,
  "toolbarFixed": true,
  "imagePosition": false,
  "formatting": ["p", "lead", "h2", "h3", "h4"],
  "formattingAdd": {
    "lede": {
      "title": "Lead / Intro Paragraph",
      "api": "module.block.format",
      "args": {
          "tag": "p",
          "class": "lead"
      }
    }
  },
  "linkClasses" : [
    { "label": "Button (regular)",      "class": "button" },
    { "label": "Text Button (regular)", "class": "button button--text" },
    { "label": "Button (large)",        "class": "button button--large" },
    { "label": "Button (small)",        "class": "button button--small" }
  ],
  "listClasses" : [
    { "label": "Two Column", "class": "two-column" },
    { "label": "Checkmarks", "class": "checkmarks" },
    { "label": "Two Column + Checkmarks", "class": "two-column checkmarks" },
    { "label": "Grid (2 columns)",  "class": "grid" },
    { "label": "Grid (3 columns)",  "class": "grid-3" }
  ],
  "imageClasses" : [
    { "label": "Normal", "class": "image", "default": true }
  ]
}