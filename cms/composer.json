{
    "minimum-stability": "beta",
    "require": {
        "craftcms/cms": "^4.0.0",
        "craftcms/redactor": "^3.0.2",
        "dolphiq/redirect": "^2.0.0",
        "mmikkel/retcon": "^2.5.0",
        "nfourtythree/entriessubset": "^2.1.0",
        "nystudio107/craft-emptycoalesce": "4.0.0",
        "nystudio107/craft-fastcgicachebust": "^4.0.0-beta.1",
        "nystudio107/craft-minify": "^4.0.0",
        "nystudio107/craft-seomatic": "^4.0.8",
        "nystudio107/craft-twigpack": "^4.0.0-beta.4",
        "nystudio107/craft-typogrify": "^4.0.0",
        "putyourlightson/craft-sherlock": "^4.2.0",
        "putyourlightson/craft-sprig": "^2.1.0",
        "sebastianlenz/linkfield": "^2.1.4",
        "topshelfcraft/environment-label": "^4.0.2",
        "trendyminds/craft-design-tokens": "1.0.3",
        "vaersaagod/dospaces": "^2.0.0",
        "vaersaagod/matrixmate": "^2.1.0",
        "verbb/formie": "^2.0.12",
        "verbb/knock-knock": "^2.0.2",
        "verbb/navigation": "^2.0.6",
        "verbb/super-table": "^3.0.1",
        "vlucas/phpdotenv": "^3.4.0",
        "yiisoft/yii2-redis": "^2.0.6"
    },
    "require-dev": {
        "yiisoft/yii2-shell": "^2.0.3"
    },
    "autoload": {
        "psr-4": {
            "modules\\sitemodule\\": "modules/sitemodule/src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/*": true,
            "craftcms/*": true,
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "craft-update": [
            "@pre-craft-update",
            "@post-craft-update"
        ],
        "pre-craft-update": [],
        "post-craft-update": [
            "@php craft install/check && php craft clear-caches/all --interactive=0 || exit 0",
            "@php craft install/check && php craft migrate/all --interactive=0 || exit 0",
            "@php craft install/check && php craft project-config/apply --interactive=0 || exit 0"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php craft setup/welcome"
        ],
        "pre-update-cmd": "@pre-craft-update",
        "pre-install-cmd": "@pre-craft-update",
        "post-update-cmd": "@post-craft-update",
        "post-install-cmd": "@post-craft-update"
    }
}
