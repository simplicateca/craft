/**
 * components/utility.css
 * 
 * Utility classes
 *
 */

@define-mixin reset-list {
    margin: 0;
    padding: 0;
    list-style: none;
}
  
@define-mixin horizontal-list {
    @mixin reset-list;
  
    li {
        display: inline-block;
        margin: 0;
        padding: 0;
    }
}

nav ul, nav ol {
    @mixin horizontal-list;
}

.tag {
    display: inline-block;
    padding: .2rem .5rem;
    background: #eee;
    margin: .2rem 1rem .2rem -.5rem;
}